{% extends 'base.html.twig' %}

{% block title %}Votre Panier
{% endblock %}

{% block body %}
	<h1>Contenu de votre Panier :</h1>

	{% if items | length > 0%}

		<table class="table">
			<thead>
				<tr>
					<th>Produit</th>
					<th>Prix</th>
					<th>Quantité</th>
					<th>Total</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
					<tr>
						<td>{{ item.product.name }}</td>
						<td>{{ item.product.price | amount }}</td>
						<td class="d-flex">
							<a href="{{ path("cart_decrement_item", {"id": item.product.id}) }}" class="btn btn-sm btn-warning">
								<i class="fas fa-minus"></i>
							</a>
							<p class="m-2">{{ item.qty }}</p>
							<a href="{{ path("cart_add", {"id": item.product.id}) }}?returnToCart=true" class="btn btn-sm btn-success">
								<i class="fas fa-plus"></i>
							</a>
						</td>
						<td>{{ item.total | amount}}</td>
						<td>
							<a title="Supprimer" href="{{ path('cart_remove_item', {"id": item.product.id}) }}" class="btn btn-sm btn-danger">
								<i class="fas fa-trash-alt"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<td colspan="3">Total :</td>
					<td colspan="2">{{ cartTotal | amount }}</td>
				</tr>
			</tfoot>
		</table>
		<hr>

		{% if app.user %}
			<h2>Confirmer votre commande en remplissant ce formulaire.</h2>

			{{ form_start(confirmationForm, {'action': path('purchase_confirm')}) }}

			{{ form_widget(confirmationForm) }}

			<button type="submit" class="btn btn-success">Je passe commande !</button>

			{{ form_end(confirmationForm) }}

		{% else %}
			<h4>Afin de pouvoir valider votre commande, vous devez être connecté.</h4>
			<a href="{{ path('security_login') }}" class="btn btn-success">Connexion</a>
			ou
			<a href="#" class="btn btn-primary">Inscription</a>
		{% endif %}


	{% else %}
		<h2>Votre panier est vide !</h2>
	{% endif %}
{% endblock %}
